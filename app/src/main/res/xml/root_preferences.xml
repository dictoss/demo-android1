<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preferencecategory_title_webview">

        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_preference_webview_use_javascript"
            android:title="@string/preference_use_javascript" />
        <EditTextPreference
            android:defaultValue="http://www.pcdennokan.wjg.jp/site/top/"
            android:key="edit_text_preference_webview_openurl"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/preference_webview_openurl" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/preferencecategory_title_sidemenu">
        <EditTextPreference
            android:defaultValue="http://www.pcdennokan.wjg.jp/site/article/"
            android:key="edit_text_preference_menu_item_blog_url"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/preference_menu_item_blog_url" />
        <EditTextPreference
            android:defaultValue="http://www.pcdennokan.wjg.jp/site/tag/hardware_in_use/"
            android:key="edit_text_preference_menu_item_hardware_url"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/preference_menu_item_hardware_url" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/preferencecategory_title_video">

        <EditTextPreference
            android:defaultValue="https://livesim.dashif.org/livesim/chunkdur_1/ato_7/testpic4_8s/Manifest.mpd"
            android:key="edit_text_preference_video_mpd_url"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/preference_video_mpd_url" />

    </PreferenceCategory>

</PreferenceScreen>